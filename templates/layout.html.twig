{% extends 'base.html.twig' %}

{% block body %}
<header>
    <nav class="navbar fixed-top navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="{{ path('index') }}">
            <img src="{{ asset('img/logo.png') }}" alt="SnowTricks logo">
        </a>
        {% for messages in app.flashes(['success', 'notice']) %}
            {% for message in messages %}
                <div class="flash-notice text-center">
                    {{ message|trans(messages, 'messages') }}
                </div>
            {% endfor %}
        {% endfor %}
        <button class="navbar-toggler"
                type="button"
                data-toggle="collapse"
                data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('index') }}">Accueil <span class="sr-only">(current)</span></a>
                </li>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item">
                        <a class="nav-link new-modal"
                           href="{{ path('app_figure_new') }}"
                           data-toggle="modal"
                           data-target="#figureModal">
                            Ajouter un Tricks
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">DÃ©connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_register') }}">S'inscrire</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</header>

{% block content %}{% endblock %}

<footer class="footer-area">
    <div class="container">
        <div class="row footer_inner justify-content-center align-items-center">
            <div class="col-lg-12 text-center">
                <aside class="f_widget social-widget">
                    <div class="f_title">
                        <h4>Follow Me</h4>
                    </div>
                    <a href="https://www.linkedin.com/in/a-pierrard/" target="_blank">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="https://github.com/WizBhoo" target="_blank">
                        <i class="fab fa-github"></i>
                    </a>
                    <a href="https://twitter.com/WizBhoo" target="_blank">
                        <i class="fab fa-twitter"></i>
                    </a>
                </aside>
                <div class="copyright">
                    <p>
                        Copyright &copy; <script>document.write(new Date().getFullYear());</script>
                        All rights reserved | This template is made with
                        <i class="fa fa-heart-o" aria-hidden="true"></i> by
                        <a href="https://github.com/WizBhoo" target="_blank">WizBhoo</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</footer>
{% endblock %}
