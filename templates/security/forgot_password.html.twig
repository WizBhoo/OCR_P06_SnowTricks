{% extends 'layout.html.twig' %}

{% block description %}Ask for a reset password token to retrieve your access to SnowTricks.{% endblock %}

{% block title %}SnowTricks - Password Forgotten{% endblock %}

{% block content %}
    <section class="main-container">
        <div class="container reset-area">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <h1 class="h3 mb-3 mt-5 font-weight-normal text-center">Changez votre Password</h1>
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-success text-center">
                            {{ message|trans(app.flashes, 'messages') }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('alert') %}
                        <div class="alert alert-danger text-center">
                            {{ message|trans(app.flashes, 'messages') }}
                        </div>
                    {% endfor %}
                </div>
                {{ form_start(forgottenPasswordForm) }}
                {% if not forgottenPasswordForm.vars.valid %}
                    <div class="text-center">
                        {{ form_errors(forgottenPasswordForm) }}
                    </div>
                {% endif %}
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(forgottenPasswordForm.username) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <button class="btn btn-light">Demander un nouveau Password</button>
                    </div>
                </div>
                {{ form_end(forgottenPasswordForm) }}
            </div>
        </div>
    </section>
{% endblock %}
