{% extends 'layout.html.twig' %}

{% block description %}Reset your SnowTricks account password.{% endblock %}

{% block title %}SnowTricks - Reset Password{% endblock %}

{% block content %}
    <section class="main-container">
        <div class="container reset-area">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <h1 class="h3 mb-3 mt-5 font-weight-normal text-center">DÃ©finir un nouveau Password</h1>
                </div>
                {{ form_start(resetPasswordForm) }}
                {% if not resetPasswordForm.vars.valid %}
                    <div class="text-center">
                        {{ form_errors(resetPasswordForm) }}
                    </div>
                {% endif %}
                <div class="row">
                    <div class="col-lg-12">
                        {{ form_row(resetPasswordForm.email) }}
                        {{ form_row(resetPasswordForm.password) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <button class="btn btn-light">Enregistrer</button>
                    </div>
                </div>
                {{ form_end(resetPasswordForm) }}
            </div>
        </div>
    </section>
{% endblock %}
