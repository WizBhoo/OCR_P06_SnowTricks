<div id="vid-carousel" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        {% for video in figure.videos %}
            {% if loop.first %}
                <div class="carousel-item active">
                    <img class="d-block w-100" src="..." alt="Trick Video">
                </div>
            {% else %}
                <div class="carousel-item">
                    <img class="d-block w-100" src="..." alt="Trick Video">
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <a class="carousel-control-prev" href="#vid-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#vid-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
