<div class="container-fluid modal-header fig-banner">
    <div class="row header-link">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <div class="fig-link">
                <a href="#" id="edit"><i class="fas fa-pencil-alt"></i></a>
                <a href="#" id="delete"><i class="fas fa-trash-alt"></i></a>
            </div>
        {% endif %}
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="row jumbotron fig-title">
        <div class="col-lg-12 text-center">
            <h3>{{ figure.name }}</h3>
        </div>
    </div>
</div>
<div class="container modal-body">
    <div class="row">
        <div class="col-lg-6 col-md-12 fig-img">
            {% include('block_modal/_modal_fig_img.html.twig') %}
        </div>
        <div class="col-lg-6 col-md-12 fig-vid">
            {% include('block_modal/_modal_fig_vid.html.twig') %}
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="fig-desc text-center m-3">
                {{ figure.description }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="fig-infos col-md-12 text-center">
                <span class="badge badge-pill badge-warning">
                    Catégorie : {{ figure.category.name }}
                </span>
            <span class="badge badge-pill badge-dark">
                    Auteur : {{ figure.snowboarder.username }}
                </span>
            <span class="badge badge-pill badge-secondary">
                    Créé le : {{ figure.createdAt ? figure.createdAt|date('d-m-Y à H:i') : '' }}
                </span>
            <span class="badge badge-pill badge-secondary">
                    Edité le : {{ figure.updatedAt ? figure.updatedAt|date('d-m-Y à H:i') : 'jamais' }}
                </span>
        </div>
    </div>
</div>
<div class="container modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">Fermer</button>
</div>
