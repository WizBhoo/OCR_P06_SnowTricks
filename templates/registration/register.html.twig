{% extends 'layout.html.twig' %}

{% block description %}Sign up to SnowTricks to add Tricks and discuss around it.{% endblock %}

{% block title %}SnowTricks - Sign Up{% endblock %}

{% block content %}
    <section class="main-container">
        <div class="container register-area">
            <div class="row justify-content-center">
                <div class="col-lg-12">
                    <h1 class="h3 mb-3 mt-5 font-weight-normal text-center">Cr√©ez votre compte utilisateur</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    {{ form_start(registrationForm) }}
                    {% if not registrationForm.vars.valid %}
                        <div class="text-center">
                            {{ form_errors(registrationForm) }}
                        </div>
                    {% endif %}
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_row(registrationForm.username) }}
                            {{ form_row(registrationForm.firstName) }}
                            {{ form_row(registrationForm.lastName) }}
                        </div>
                        <div class="col-lg-6">
                            {{ form_row(registrationForm.email) }}
                            {{ form_row(registrationForm.password) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <button class="btn btn-light">S'enregistrer</button>
                        </div>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
